<?xml version="1.0" encoding="UTF-8"?>
<testcase id="validate-invalid-json" xmlns="http://www.gitb.com/tdl/v1/" xmlns:gitb="http://www.gitb.com/core/v1/">
    <metadata>
        <gitb:name>Validate Invalid JSON</gitb:name>
        <gitb:version>1.0</gitb:version>
        <gitb:description>Tests the validator's handling of malformed JSON input using JSON validator with FHIR plugin</gitb:description>
    </metadata>
    
    <actors>
        <gitb:actor id="json-validator" name="JSON Validator" role="SUT"/>
    </actors>
    
    <steps>
        <interact id="userData" desc="Upload JSON file to validate">
            <request desc="JSON file to validate:" name="jsonFile" inputType="UPLOAD" required="true"/>
        </interact>
        
        <verify handler="XmlValidator" desc="Validate invalid JSON">
            <input name="xml">$userData{jsonFile}</input>
        </verify>
    </steps>
    
    <output>
        <success>
            <default>"Invalid JSON validation succeeded (correctly identified as invalid)."</default>
        </success>
        <failure>
            <default>"Invalid JSON validation failed. Refer to the failed step's report for more details."</default>
        </failure>
    </output>
</testcase>

